<h3 class="ui header">{{t "forms.i-i-s-mind-день-из-жизни-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-mind-день-из-жизни-e.дата-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.дата
      class=(if (v-get validationObject "дата" "isInvalid") "error")
      data-test-i-i-s-mind-день-из-жизни-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "дата" "messages")}}
  </div>

  <div class="field">
    <label>{{t "forms.i-i-s-mind-день-из-жизни-e.мояЖизнь-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.мояЖизнь
      relationName="мояЖизнь"
      projection="МояЖизньL"
      title=(t "forms.i-i-s-mind-день-из-жизни-e.мояЖизнь-caption")
      readonly=readonly
      componentName="мояЖизньLookup"
      data-test-i-i-s-mind-день-из-жизни-e---------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "мояЖизнь" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.мояЖизнь.описание
      class=(if (v-get validationObject "мояЖизнь.описание" "isInvalid") "error")
      label=(t "forms.i-i-s-mind-день-из-жизни-e.мояЖизнь.описание-caption")
      data-test-i-i-s-mind-день-из-жизни-e------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "мояЖизнь.описание" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-mind-день-из-жизни-e.результатДня-caption"}}</label>
    {{flexberry-groupedit
      componentName="результатДняGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.результатДня
      content=model.результатДня
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "результатДня" "isInvalid") "error")
      data-test-i-i-s-mind-день-из-жизни-e-------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "результатДня" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-mind-день-из-жизни-e.практикуемаяПривычка-caption"}}</label>
    {{flexberry-groupedit
      componentName="практикуемаяПривычкаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.практикуемаяПривычка
      content=model.практикуемаяПривычка
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "практикуемаяПривычка" "isInvalid") "error")
      data-test-i-i-s-mind-день-из-жизни-e---------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "практикуемаяПривычка" "messages")}}
  </div>
</form>